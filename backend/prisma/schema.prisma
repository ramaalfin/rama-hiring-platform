generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CANDIDATE
}

model User {
  id             String             @id @default(uuid())
  fullName       String
  email          String             @unique
  password       String
  verified       Boolean            @default(false)
  isTwoFAEnabled Boolean            @default(false)
  twoFAEmailCode String?
  twoFAExpiresAt DateTime?
  role           Role               @default(CANDIDATE)
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt
  sessions       Session[]
  jobs           Job[]
  applications   Application[]
  verifications  VerificationCode[]
}

model Session {
  id        String    @id @default(uuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  userAgent String?
  expiresAt DateTime? @default(dbgenerated("now() + interval '30 days'"))
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model VerificationCode {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String
  expiresAt DateTime
  createdAt DateTime
}

model Job {
  id          String      @id @default(uuid())
  title       String
  description String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  applications Application[]
  createdBy   String
  creator     User        @relation(fields: [createdBy], references: [id])
}

model Application {
  id        String   @id @default(uuid())
  jobId     String
  job       Job      @relation(fields: [jobId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  resume    Json
  createdAt DateTime @default(now())
}
